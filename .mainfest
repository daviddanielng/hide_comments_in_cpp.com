{
    "manifest_version": 3,
    "name": "Hide Comments",
    "version": "1.0",
    "description": "A Chrome extension to hide comments on learncpp.com.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Hide Comments",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon.png"
    }
}
